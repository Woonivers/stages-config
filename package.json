{
  "name": "@woonivers/stages-config",
  "version": "1.1.0",
  "description": "Easy environment by stages",
  "repository": {
    "type": "git",
    "url": "https://github.com/Woonivers/stages-config.git"
  },
  "main": "build/index.js",
  "typings": "build/types/index.d.ts",
  "files": ["build/"],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch --notify",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx}'",
    "build": "rm -rf build && tsc",
    "ci:test": "yarn lint && yarn test --maxWorkers=2",
    "ci:publish": "yarn semantic-release",
    "semantic-release": "semantic-release"
  },
  "keywords": ["stages", "config-module"],
  "author": "Jorge Marrero",
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.ts": ["prettier --write", "eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "dependencies": {
    "eslint-import-resolver-typescript": "^1.1.1",
    "lodash": "^4.17.11",
    "validator": "^10.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "7.6.0",
    "@commitlint/config-conventional": "7.6.0",
    "@semantic-release/changelog": "3.0.2",
    "@semantic-release/git": "7.0.8",
    "@types/jest": "24.0.11",
    "@types/lodash": "4.14.124",
    "@types/node": "11.10.4",
    "@types/validator": "10.11.0",
    "@typescript-eslint/eslint-plugin": "1.4.2",
    "@typescript-eslint/parser": "1.4.2",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-config-typescript": "2.0.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-prettier": "3.0.1",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "semantic-release": "15.13.3",
    "ts-jest": "24.0.0",
    "ts-node": "8.0.3",
    "typescript": "3.2.2",
    "typescript-eslint-parser": "22.0.0"
  },
  "release": {
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": ["package.json", "package-lock.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
